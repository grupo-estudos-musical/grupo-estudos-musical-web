@model IEnumerable<GrupoEstudosMusical.MVC.Models.TurmaVM>
@{
    ViewBag.Title = "Turmas do Professor";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Turmas</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>                
                <li class="active">
                    <strong>Todos suas Turmas</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Lista Turmas</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            @Html.Partial("_MensagemSucesso")
            <div class="row">
                <div class="col-xs-12">
                    <table id="example-1" class="table table-striped dt-responsive display">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Nome)</th>
                                <th>Módulo</th>
                                <th>@Html.DisplayNameFor(m => m.Nivel)</th>
                                <th>@Html.DisplayNameFor(m => m.DataInicio)</th>
                                <th>Professor</th>
                                <th>@Html.DisplayNameFor(m => m.Status)</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Nome)</th>
                                <th>Módulo</th>
                                <th>@Html.DisplayNameFor(m => m.Nivel)</th>
                                <th>@Html.DisplayNameFor(m => m.DataInicio)</th>
                                <th>Professor</th>
                                <th>@Html.DisplayNameFor(m => m.Status)</th>
                                <th>Opções</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var turma in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(item => turma.Nome)</td>
                                    <td>@Html.DisplayFor(item => turma.Modulo.Nome)</td>
                                    <td>@Html.DisplayFor(item => turma.Nivel)</td>
                                    <td>@turma.DataInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@Html.DisplayFor(item => turma.Professor.Nome)</td>
                                    <td id="status_turma">@Html.DisplayFor(item => turma.Status)</td>
                                    <td style="width: 160px">
                                        @if (turma.Status != "Encerrada")
                                        {
                                            @Html.ActionLink("Visão Geral", "VisaoGeral", "Turmas", new { Id = turma.Id }, new { @class = "btn btn-primary" })
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>



@section Styles{
    <link href="~/Content/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/datatables/extensions/TableTools/css/dataTables.tableTools.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/datatables/extensions/Responsive/css/dataTables.responsive.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/datatables/extensions/Responsive/bootstrap3/dataTables.bootstrap.css" rel="stylesheet" type="text/css" media="screen" />
}

@section Scripts{
    <script src="~/Scripts/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datatables/extensions/TableTools/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datatables/extensions/Responsive/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datatables/extensions/Responsive/bootstrap3/dataTables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/js/TurmasIndex.js" type="text/javascript"></script>
}
