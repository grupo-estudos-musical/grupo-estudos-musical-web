@model GrupoEstudosMusical.MVC.Models.TurmaVM
@{
    ViewBag.Title = "LançarNotas";
}



<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <!-- PAGE HEADING TAG - START -->
            <h1 class="title">Lançamento de Notas da Turma</h1><!-- PAGE HEADING TAG - END -->
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Turmas")">Turmas</a>
                </li>
                <li>
                    <a href="@Url.Action("VisaoGeral", "Turmas", new { Id = Model.Id })">Visão Geral</a>
                </li>
                <li class="active">
                    <strong>Lançamento de Notas</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Lançamento de notas da Turma @Model.Nome</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <input type="hidden" name="TurmaID" id="TurmaID" value="@Model.Id" />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="form-label">Selecione a avaliação</label>
                        <div class="controls">
                            @Html.DropDownList("Avaliacao", new SelectList(ViewBag.AvaliacoesTurma, "IdAvaliacaoTurma", "Avaliacao.Nome"), new { @class = "form-control m-bot15" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="controls">
                            <button type="button" class="btn btn-success" onclick="ObterPalheta();">Obter Palheta de Notas</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <div id="divPalhetasDeNotas">
                
            </div>

        </div>
    </section>
</div>



<script src="~/Scripts/JsPalhetaDeNotas.js"></script>