@model GrupoEstudosMusical.MVC.Models.AutenticarVM

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    @Html.Partial("_Head")

    <!-- CORE CSS TEMPLATE - START -->
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <!-- CORE CSS TEMPLATE - END -->
</head>
<body class="login_page">
    <div class="container-fluid">
        <div class="login-wrapper row">
            <div id="login" class="login loginpage col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4 div-login">
                <h1><a href="#" title="Login Page" tabindex="-1">Complete Admin</a></h1>
                <hr style="background-color: #000; color: #000; height: 1px"/>
                <h4 class="text-center">Digite seu e-mail e senha para se logar.</h4>
                @using (Html.BeginForm("Login", "Usuarios", FormMethod.Post, htmlAttributes: new { name = "loginform", id = "loginform" }))
                {
                    <p>
                        <label for="user_login">
                            E-mail<br />
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { id = "user_login", @class="input"} })
                        </label>
                    </p>
                    <p>
                        <label for="user_pass">
                            Senha<br />
                            @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { id = "user_pass", @class = "input"} })
                        </label>
                    </p>

                    <p class="submit">
                        <input type="submit" name="wp-submit" id="wp-submit" class="btn btn-accent btn-block" value="Logar" />
                    </p>
                }

                <p id="nav">
                    <a class="pull-right" href="#" title="Password Lost and Found">Esqueci minha senha</a>
                </p>


            </div>
        </div>
    </div>
    @Html.Partial("_Scripts")

    <!-- CORE TEMPLATE JS - START -->
    <script src="~/Scripts/js/scripts.js" type="text/javascript"></script>
    <script src="~/Scripts/js/app.js"></script>
    <!-- END CORE TEMPLATE JS - END -->
</body>
</html>

