@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    @Html.Partial("_Head")

    <!-- CORE CSS TEMPLATE - START -->
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <!-- CORE CSS TEMPLATE - END -->
</head>
<body class="login_page">
    <div class="container-fluid">
        <div class="login-wrapper row">
            <div id="login" class="login loginpage col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4">
                @*<h1><a href="#" title="Login Page" tabindex="-1">Complete Admin</a></h1>*@

                <form name="loginform" id="loginform" action="index.html" method="post">
                    <p>
                        <label for="user_login">
                            Username<br />
                            <input type="text" name="log" id="user_login" class="input" size="20" />
                        </label>
                    </p>
                    <p>
                        <label for="user_pass">
                            Password<br />
                            <input type="password" name="pwd" id="user_pass" class="input" size="20" />
                        </label>
                    </p>

                    <p class="submit">
                        <input type="submit" name="wp-submit" id="wp-submit" class="btn btn-accent btn-block" value="Logar" />
                    </p>
                </form>

                <p id="nav">
                    <a class="pull-left" href="#" title="Password Lost and Found">Esqueci minha senha</a>
                </p>


            </div>
        </div>
    </div>
    @Html.Partial("_Scripts")

    <!-- CORE TEMPLATE JS - START -->
    <script src="~/Scripts/js/scripts.js" type="text/javascript"></script>
    <script src="~/Scripts/js/app.js"></script>
    <!-- END CORE TEMPLATE JS - END -->
</body>
</html>

