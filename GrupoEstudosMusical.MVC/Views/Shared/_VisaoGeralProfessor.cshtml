<div class="col-xs-12 col-md-6 col-lg-3">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title texto-centralizado">@ViewData["titulo"]</h2>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="imagem-centralizada">
                        <a href="@ViewData["link"]" @(ViewData["attr"]?.ToString())>
                            <img src="@ViewData["imagem"]" alt="@ViewData["alt"]" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>