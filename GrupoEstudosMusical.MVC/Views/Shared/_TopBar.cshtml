<!-- START TOPBAR -->
<div class='page-topbar '>
    <div class='logo-area'>

    </div>
    <div class='quick-area'>
        <div class='pull-left'>
            <ul class="info-menu left-links list-inline list-unstyled">
                <li class="sidebar-toggle-wrap">
                    <a href="#" data-toggle="sidebar" class="sidebar_toggle">
                        <i class="fa fa-bars"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class='pull-right'>
            <ul class="info-menu right-links list-inline list-unstyled">
                <li class="profile">
                    <a href="#" data-toggle="dropdown" class="toggle">
                        @if (Context.Session["nivelAcesso"]?.ToString() == "Aluno")
                        {
                            <img src="~/Content/imagensAlunos/@Context.Session["imagemUrl"]" alt="user-image" class="img-circle img-inline">
                        }
                        else
                        {
                            <img src="~/Content/images/user.png" alt="user-image" class="img-circle img-inline">
                        }
                        <span>@(Context.Session["nomeUsuario"]?.ToString()) <i class="fa fa-angle-down"></i></span>
                    </a>
                    <ul class="dropdown-menu profile animated fadeIn">
                        <li>
                            <a href="@Url.Action("AlterarSenha", "Usuarios")">
                                <i class="fa fa-user"></i>
                                Alterar Senha
                            </a>
                        </li>
                        <li class="last">
                            <a href="@Url.Action("Logout", "Usuarios")">
                                <i class="fa fa-lock"></i>
                                Logout
                            </a>
                        </li>
                    </ul>
                </li>
                <li></li>
            </ul>
        </div>
    </div>

</div>
<!-- END TOPBAR -->