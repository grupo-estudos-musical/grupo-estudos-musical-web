        <a href="javascript:;">
            <i class="fa fa-bar-chart"></i>
            <span class="title">Relatórios</span>
            <span class="arrow "></span>
        </a>
        <ul class="sub-menu">
            <li>
                <a class="" href="uni-report-student.html">Alunos</a>
            </li>
            <li>
                <a class="" href="uni-report-professors.html">Professores</a>
            </li>
        </ul>
