@model GrupoEstudosMusical.MVC.Models.ListaChamadasVM

@{
    ViewBag.Title = "Lista de Chamadas";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Chamadas</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Turmas")">Turmas</a>
                </li>
                <li>
                    <a href="@Url.Action("VisaoGeral", "Turmas", new { id = Model.Turma.Id})">Visão Geral</a>
                </li>
                <li class="active">
                    <strong>Chamadas</strong>
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Lista de Chamadas da Turma <span>@Model.Turma.Nome</span></h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group pull-left">
                        <div class="controls">
                            <a href="Chamadas/Novo?idTurma=@Model.Turma.Id" class="btn btn-success btn-iconic bottom">
                                <i class="fa fa-plus"> &nbsp; <span>Realizar Chamada</span></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("_MensagemSucesso")
            <div class="row">
                <div class="col-xs-12">
                    <table id="example-1" class="table table-striped dt-responsive display">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].DataCadastro)</th>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].QuantidadePresenca)</th>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].QuantidadeFaltas)</th>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].PorcentagemFrequencia)</th>
                                <th>Opções</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].DataCadastro)</th>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].QuantidadePresenca)</th>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].QuantidadeFaltas)</th>
                                <th>@Html.DisplayNameFor(c => c.Chamadas[0].PorcentagemFrequencia)</th>
                                <th>Opções</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.Chamadas)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(c => item.DataCadastro)</td>
                                    <td>@Html.DisplayFor(c => item.QuantidadePresenca)</td>
                                    <td>@Html.DisplayFor(c => item.QuantidadeFaltas)</td>
                                    <td>@Html.DisplayFor(c => item.PorcentagemFrequencia)%</td>
                                    <td>
                                        <a href="Chamadas/Detalhes/@item.Id" class="btn btn-primary btn-iconic bottom">
                                            <i class="fa fa-search"> &nbsp; <span>Consultar</span></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles{
    <link href="~/Content/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/datatables/extensions/TableTools/css/dataTables.tableTools.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/datatables/extensions/Responsive/css/dataTables.responsive.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/Content/lib/datatables/extensions/Responsive/bootstrap3/dataTables.bootstrap.css" rel="stylesheet" type="text/css" media="screen" />
}

@section Scripts{
    <script src="~/Scripts/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datatables/extensions/TableTools/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datatables/extensions/Responsive/js/dataTables.responsive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/lib/datatables/extensions/Responsive/bootstrap3/dataTables.bootstrap.js" type="text/javascript"></script>
}